{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@libs/database": ["libs/database/src"],
      "@libs/database/*": ["libs/database/src/*"],
      "@libs/config": ["libs/config/src"],
      "@libs/config/*": ["libs/config/src/*"],
      "@libs/domain": ["libs/domain/src"],
      "@libs/domain/*": ["libs/domain/src/*"],
      "@libs/redlock": ["libs/redlock/src"],
      "@libs/redlock/*": ["libs/redlock/src/*"],
      "@libs/mock-api": ["libs/mock-api/src"],
      "@libs/mock-api/*": ["libs/mock-api/src/*"],
      "@libs/common": ["libs/common/src"],
      "@libs/common/*": ["libs/common/src/*"],
      "@libs/redis": ["libs/redis/src"],
      "@libs/redis/*": ["libs/redis/src/*"],
      "@libs/outbox": ["libs/outbox/src"],
      "@libs/outbox/*": ["libs/outbox/src/*"],
      "@libs/logger": ["libs/logger/src"],
      "@libs/logger/*": ["libs/logger/src/*"]
    }
  }
}
