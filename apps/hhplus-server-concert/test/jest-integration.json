{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testEnvironment": "node",
  "testRegex": ".*\\.integration-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@libs/database(|/.*)$": "<rootDir>/../../../libs/database/src/$1",
    "^@libs/config(|/.*)$": "<rootDir>/../../../libs/config/src/$1",
    "^@libs/domain(|/.*)$": "<rootDir>/../../../libs/domain/src/$1",
    "^@libs/redlock(|/.*)$": "<rootDir>/../../../libs/redlock/src/$1",
    "^@libs/mock-api(|/.*)$": "<rootDir>/../../../libs/mock-api/src/$1",
    "^@libs/common(|/.*)$": "<rootDir>/../../../libs/common/src/$1",
    "^@libs/redis(|/.*)$": "<rootDir>/../../../libs/redis/src/$1",
    "^@libs/outbox(|/.*)$": "<rootDir>/../../../libs/outbox/src/$1",
    "^@libs/logger(|/.*)$": "<rootDir>/../../../libs/logger/src/$1",
    "^@libs/kafka-client(|/.*)$": "<rootDir>/../../../libs/kafka-client/src/$1"
  }
}
